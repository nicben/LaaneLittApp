<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/searchPageFragment">

    <fragment
        android:id="@+id/itemFragment"
        android:name="com.laanelitt.laanelittapp.ItemFragment"
        android:label="fragment_item"
        tools:layout="@layout/fragment_item" />
    <fragment
        android:id="@+id/searchPageFragment"
        android:name="com.laanelitt.laanelittapp.SearchPageFragment"
        android:label="fragment_search_page"
        tools:layout="@layout/fragment_search_page" >
        <action
            android:id="@+id/action_searchPageFragment_to_searchListFragment"
            app:destination="@id/searchListFragment" />
        <action
            android:id="@+id/action_searchPageFragment_to_myItemListFragment"
            app:destination="@id/myItemListFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchListFragment"
        android:name="com.laanelitt.laanelittapp.SearchListFragment"
        android:label="fragment_search_list"
        tools:layout="@layout/fragment_search_list" >
        <action
            android:id="@+id/action_searchListFragment_to_itemFragment"
            app:destination="@id/itemFragment" />
    </fragment>
    <fragment
        android:id="@+id/myItemListFragment"
        android:name="com.laanelitt.laanelittapp.MyItemListFragment"
        android:label="fragment_my_item_list"
        tools:layout="@layout/fragment_my_item_list" />
</navigation>