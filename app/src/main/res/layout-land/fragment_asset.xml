<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".asset.AssetFragment">

    <data>
        <variable
            name="viewModel"
            type="com.laanelitt.laanelittapp.asset.AssetViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/assetImage"
                android:layout_width="@dimen/width_0dp"
                android:layout_height="266dp"
                android:layout_marginTop="@dimen/margin_top_XS"
                android:contentDescription="TODO"
                app:imageUrl="@{viewModel.selectedProperty.assetImages.get(0).imageUrl}"
                app:layout_constraintEnd_toStartOf="@id/assetName"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/backgrounds/scenic" />

            <TextView
                android:id="@+id/assetName"
                android:layout_width="@dimen/width_0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_L"
                android:layout_marginStart="@dimen/start_end_margin"
                android:layout_marginEnd="@dimen/start_end_margin"
                android:layout_gravity="start"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/title_size"
                android:text="@{viewModel.selectedProperty.assetName}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/assetImage"
                app:layout_constraintTop_toTopOf="@+id/assetImage"
                tools:text="Navn" />

            <androidx.core.widget.NestedScrollView
                android:id="@+id/assetDescription"
                android:layout_width="@dimen/width_0dp"
                android:layout_height="150dp"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/start_end_margin"
                android:layout_marginEnd="@dimen/start_end_margin"
                app:layout_constraintBottom_toTopOf="@+id/pickDateButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/assetImage"
                app:layout_constraintTop_toBottomOf="@+id/assetName">

                <TextView
                    android:id="@+id/assetDescriptionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="@{viewModel.selectedProperty.description}"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/description_size"
                    tools:text="Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse Beskrivelse " />

            </androidx.core.widget.NestedScrollView>

            <Button
                android:id="@+id/pickDateButton"
                android:layout_width="@dimen/width_0dp"
                android:layout_height="@dimen/height_btn"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/start_end_margin"
                android:layout_marginTop="@dimen/margin_top_XL"
                android:layout_marginEnd="@dimen/start_end_margin"
                android:text="@string/send_loan_request_pop"
                android:textSize="@dimen/button_text_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/assetImage"
                app:layout_constraintBottom_toBottomOf="@+id/assetImage" />

            <ImageView
                android:id="@+id/ownerImage"
                android:layout_width="@dimen/width_0dp"
                android:layout_height="100dp"
                app:ownerImageUrl="@{viewModel.selectedProperty.users.profileImage}"
                android:layout_marginTop="@dimen/margin_top_XL"
                android:layout_marginStart="@dimen/start_end_margin"
                app:layout_constraintEnd_toStartOf="@id/ownerName"
                app:layout_constraintStart_toStartOf="@id/assetImage"
                app:layout_constraintTop_toBottomOf="@id/pickDateButton"
                tools:src="@tools:sample/backgrounds/scenic"
                android:contentDescription="TODO"
                android:layout_marginBottom="@dimen/margin_top_XL"/>
            <TextView
                android:id="@+id/ownerName"
                android:layout_width="@dimen/width_0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_XL"
                android:layout_marginStart="@dimen/start_end_margin"
                android:layout_marginEnd="@dimen/start_end_margin"
                android:layout_gravity="start"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/description_size"
                android:text="@{`Navn:\n`+viewModel.selectedProperty.users.firstName+' '+viewModel.selectedProperty.users.lastName}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ownerImage"
                app:layout_constraintTop_toBottomOf="@+id/pickDateButton"
                tools:text="Navn" />
            <TextView
                android:id="@+id/ownerLocation"
                android:layout_width="@dimen/width_0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_S"
                android:layout_marginStart="@dimen/start_end_margin"
                android:layout_marginEnd="@dimen/start_end_margin"
                android:layout_gravity="start"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/description_size"
                android:text="@{`Lokasjon:\n`+viewModel.selectedProperty.users.zipCode.id+' '+viewModel.selectedProperty.users.zipCode.city}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ownerImage"
                app:layout_constraintTop_toBottomOf="@+id/ownerName"
                tools:text="Lokasjon" />

            <TextView
                android:id="@+id/datePickerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>